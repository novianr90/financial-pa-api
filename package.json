{
    "name": "pa-financial-api",
    "version": "0.0.1",
    "description": "An API to serve Personal Assistant Finance",
    "keywords": [
        "nest",
        "nestjs",
        "nest.js",
        "sequelize",
        "sequelize-typescript",
        "orm",
        "nodejs",
        "node.js",
        "node",
        "typescript",
        "jwt",
        "jsonwebtoken",
        "passport",
        "swagger",
        "jest"
    ],
    "author": "Novian",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "db:migrate": "ts-node node_modules/.bin/sequelize db:migrate",
        "db:drop": "ts-node node_modules/.bin/sequelize db:drop",
        "db:create": "ts-node node_modules/.bin/sequelize db:create",
        "db:seed-dev": "ts-node node_modules/.bin/sequelize db:seed:all",
        "db:seed-prod": "ts-node node_modules/.bin/sequelize db:seed:all --seeders-path db/seeders-prod",
        "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed-dev && npm run db:seed-prod",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/src/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.12",
        "@nestjs/core": "^11.0.12",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.12",
        "@nestjs/swagger": "^11.1.0",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "sequelize": "^6.37.6",
        "sequelize-cli": "^6.6.2",
        "sequelize-typescript": "^2.1.6",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^11.0.12",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.14",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^6.0.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "npm-check-updates": "^17.1.16",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tslint": "6.1.3",
        "typescript": "^5.8.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
